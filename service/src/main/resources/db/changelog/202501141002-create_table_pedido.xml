<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250114-1002" author="layla.couto">
        <createSequence incrementBy="1" sequenceName="seq_pedido" startValue="1"/>
        <createTable tableName="pedido">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_pedido"/>
            </column>
            <column name="cliente_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="atendente_id" type="BIGINT"/>
            <column name="status" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="data_hora" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="observacoes" type="VARCHAR(255)"/>
            <column name="ativo" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="atendente_id" baseTableName="pedido"
                                 constraintName="FK_PEDIDO_ON_ATENDENTE" referencedColumnNames="id"
                                 referencedTableName="usuario"/>
        <addForeignKeyConstraint baseColumnNames="cliente_id" baseTableName="pedido"
                                 constraintName="FK_PEDIDO_ON_CLIENTE" referencedColumnNames="id"
                                 referencedTableName="cliente"/>
    </changeSet>
</databaseChangeLog>
